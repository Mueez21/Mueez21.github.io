/* ==========================================================================
   MODERN DARK MODE NEON PORTFOLIO STYLESHEET
   ========================================================================== */

/* Import Google Font - Poppins */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

/* ==========================================================================
   CSS RESET & BASE STYLES
   ========================================================================== */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* ==========================================================================
   CSS VARIABLES - CUSTOMIZE YOUR THEME HERE
   ========================================================================== */

:root {
    /* Professional Color Palette - Subtle and Clean */
    --primary-color: #2563eb;       /* Professional blue */
    --primary-light: #3b82f6;       /* Lighter blue for hovers */
    --primary-dark: #1e40af;        /* Darker blue for depth */
    --accent-color: #10b981;        /* Subtle green accent */
    --accent-secondary: #06b6d4;    /* Cyan accent - minimal use */
    
    /* Background Colors - Professional Gray Scale */
    --bg-dark: #0f172a;             /* Dark navy background */
    --bg-darker: #020617;           /* Deeper background */
    --bg-card: #1e293b;             /* Card background */
    --bg-hover: #334155;            /* Hover state background */
    
    /* Text Colors - High Contrast for Readability */
    --text-primary: #f8fafc;        /* Almost white */
    --text-secondary: #cbd5e1;      /* Light gray */
    --text-muted: #94a3b8;          /* Muted gray */
    
    /* Border & Shadow - Subtle and Professional */
    --border-color: #334155;
    --border-light: #475569;
    --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.12);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.15);
    --shadow-xl: 0 20px 40px rgba(0, 0, 0, 0.2);
    
    /* Subtle Accent Shadows - Minimal glow */
    --shadow-accent: 0 4px 12px rgba(37, 99, 235, 0.15);
    --shadow-accent-hover: 0 8px 20px rgba(37, 99, 235, 0.25);
    
    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;
    
    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-full: 50%;
    
    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;
}

/* ==========================================================================
   ACCESSIBILITY - REDUCED MOTION PREFERENCES
   ========================================================================== */

/* Respect user's motion preferences */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
        scroll-behavior: auto !important;
    }
}

/* ==========================================================================
   BASE HTML ELEMENTS
   ========================================================================== */

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: 'Poppins', sans-serif;
    line-height: 1.6;
    color: var(--text-primary);
    background-color: var(--bg-dark);
    background-image: 
        radial-gradient(circle at 20% 50%, rgba(37, 99, 235, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.03) 0%, transparent 50%);
    background-attachment: fixed;
    overflow-x: hidden;
}

/* Global focus styles for all interactive elements */
a, button, input, textarea, select {
    transition: var(--transition-normal);
}

/* Remove default focus outline and add enhanced focus-visible */
*:focus {
    outline: none;
}

*:focus-visible {
    outline: 3px solid var(--primary-color);
    outline-offset: 3px;
    border-radius: var(--radius-xs);
}

/* ==========================================================================
   UTILITY CLASSES
   ========================================================================== */

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
}

/* Skip to content link for accessibility - Enhanced visibility */
.skip-to-content {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--primary-color);
    color: white;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: var(--radius-sm);
    font-weight: 700;
    font-size: 1rem;
    z-index: 9999;
    transition: top var(--transition-fast);
}

.skip-to-content:focus {
    top: 10px;
    left: 10px;
    outline: 3px solid var(--accent-color);
    outline-offset: 2px;
}


/* Section Title Styles */
.section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    position: relative;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 2px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 2px;
}

/* ==========================================================================
   NAVIGATION BAR
   ========================================================================== */

.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color);
    box-shadow: var(--shadow-md);
    z-index: 1000;
    padding: 1rem 0;
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo a {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: var(--transition-normal);
}

.logo a:hover {
    color: var(--primary-light);
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 1.2rem;
    align-items: center;
}

.nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: var(--transition-normal);
    position: relative;
    padding: 0.5rem 0;
    white-space: nowrap;
}

.nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary-color);
    transition: var(--transition-normal);
}

.nav-link:hover,
.nav-link:focus,
.nav-link.active {
    color: var(--primary-color);
}

/* Enhanced focus styles for keyboard navigation (WCAG 2.1) */
.nav-link:focus-visible {
    outline: 3px solid var(--primary-color);
    outline-offset: 4px;
    border-radius: var(--radius-xs);
}

.nav-link:hover::before,
.nav-link:focus::before,
.nav-link.active::before {
    width: 100%;
}

.nav-link.resume-link {
    background: var(--primary-color);
    color: white;
    padding: 0.5rem 1.2rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    box-shadow: var(--shadow-accent);
}

.nav-link.resume-link:hover {
    transform: translateY(-2px);
    background: var(--primary-light);
    box-shadow: var(--shadow-accent-hover);
}

.nav-link.resume-link::before {
    display: none;
}

/* Hamburger Menu */
.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    background: transparent;
    border: none;
    padding: 0.5rem;
}

.bar {
    width: 25px;
    height: 3px;
    background-color: var(--primary-color);
    margin: 3px 0;
    transition: var(--transition-normal);
    border-radius: 2px;
}

/* ==========================================================================
   BUTTONS
   ========================================================================== */

.btn {
    padding: 12px 30px;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: var(--transition-normal);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    border: 2px solid transparent;
}

/* Primary Button - Filled Professional Blue */
.btn-primary {
    background: var(--primary-color);
    color: white;
    border: none;
    box-shadow: var(--shadow-accent);
}

.btn-primary:hover,
.btn-primary:focus {
    transform: translateY(-2px);
    background: var(--primary-light);
    box-shadow: var(--shadow-accent-hover);
}

/* Enhanced focus-visible for buttons (WCAG 2.1) */
.btn-primary:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
}

/* Secondary Button - Ghost */
.btn-secondary {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
}

.btn-secondary:hover,
.btn-secondary:focus {
    background: var(--primary-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-accent);
}

.btn-secondary:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
}

/* ==========================================================================
   HERO SECTION
   ========================================================================== */

.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 20px 80px;
    position: relative;
    overflow: hidden;
}

/* Animated background gradient - Subtle */
.hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.05) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
    pointer-events: none;
}

@keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
    animation: fadeInUp 1s ease;
}

.hero-image {
    margin-bottom: 2rem;
}

.profile-picture {
    width: 180px;
    height: 180px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 4rem;
    color: var(--text-primary);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    border: 4px solid var(--primary-color);
    position: relative;
    overflow: hidden;
    object-fit: cover;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
}

.hero-title .highlight {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    display: inline-block;
    font-weight: 800;
}

.hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-weight: 500;
}

.hero-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.8;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 2rem;
}

.social-links a {
    color: var(--text-secondary);
    font-size: 1.8rem;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: var(--radius-full);
    border: 2px solid var(--border-color);
}

.social-links a:hover,
.social-links a:focus {
    color: var(--primary-color);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
    transform: translateY(-3px);
}

.social-links a:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}


/* ==========================================================================
   SECTIONS - COMMON STYLES
   ========================================================================== */

section {
    padding: 80px 20px;
    position: relative;
}

/* ==========================================================================
   ABOUT SECTION
   ========================================================================== */

.about {
    background: rgba(0, 0, 0, 0.3);
}

.about-content {
    max-width: 900px;
    margin: 0 auto;
}

.about-text h3 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
}

.about-text p {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
    line-height: 1.8;
    font-size: 1.05rem;
}

/* ==========================================================================
   EDUCATION SECTION
   ========================================================================== */

.education {
    background: var(--bg-dark);
}

.education-timeline {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.education-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
    display: flex;
    gap: 2rem;
    box-shadow: var(--shadow-md);
    transition: var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.education-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--primary-color), var(--accent-color));
}

.education-card:hover {
    transform: translateX(5px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
}

.education-icon {
    font-size: 3rem;
    color: var(--primary-color);
    flex-shrink: 0;
}

.education-content h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.education-content h4 {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-weight: 500;
}

.education-date {
    color: var(--primary-color);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.education-details {
    margin-bottom: 1rem;
}

.badge {
    background: var(--primary-color);
    color: white;
    padding: 4px 12px;
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
    font-weight: 600;
    display: inline-block;
}

.education-content p {
    color: var(--text-secondary);
    line-height: 1.6;
}

/* ==========================================================================
   CERTIFICATIONS SECTION
   ========================================================================== */

.certifications {
    background: rgba(0, 0, 0, 0.3);
}

.certifications-grid {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: 2rem;
}

.certification-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-md);
    transition: var(--transition-normal);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.certification-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--primary-color), var(--accent-color));
}

.certification-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
}

.certification-image {
    width: 100%;
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 2px solid var(--border-color);
    transition: var(--transition-normal);
}

.certification-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    transition: var(--transition-normal);
}

.certification-card:hover .certification-image {
    border-color: var(--primary-color);
}

.certification-card:hover .certification-image img {
    transform: scale(1.02);
}

.certification-icon {
    font-size: 3rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
}

.certification-content h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.certification-content h4 {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-weight: 500;
}

.certification-meta {
    margin-bottom: 1rem;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.certification-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
}

.certification-highlights {
    list-style: none;
    padding-left: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
}

.certification-highlights li {
    color: var(--text-secondary);
    font-size: 0.9rem;
    position: relative;
    padding-left: 1.5rem;
}

.certification-highlights li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--accent-color);
    font-weight: bold;
}

.view-certificate-btn {
    margin-top: 1rem;
    width: 100%;
}

/* ==========================================================================
   CERTIFICATE MODAL
   ========================================================================== */

.certificate-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.certificate-modal.active {
    display: flex;
    opacity: 1;
}

.certificate-modal-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    background: var(--bg-card);
    border: 2px solid var(--primary-color);
    border-radius: var(--radius-lg);
    padding: 1rem;
    box-shadow: var(--shadow-accent-hover);
    z-index: 10001;
    animation: modalSlideIn 0.3s ease;
    overflow: auto;
}

.certificate-modal-content img {
    width: 100%;
    height: auto;
    max-height: 85vh;
    display: block;
    border-radius: var(--radius-md);
    object-fit: contain;
}

/* ==========================================================================
   SKILLS SECTION
   ========================================================================== */

.skills {
    background: rgba(0, 0, 0, 0.3);
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
}

.skill-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.skill-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.1), transparent);
    transition: var(--transition-slow);
}

.skill-card:hover::before {
    left: 100%;
}

.skill-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
}

.skill-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 0.75rem;
}

.skill-card h3 {
    font-size: 1.1rem;
    color: var(--text-primary);
    margin-bottom: 0.4rem;
    font-weight: 600;
}

.skill-card p {
    color: var(--text-secondary);
    font-size: 0.85rem;
}

/* ==========================================================================
   PROJECTS SECTION
   ========================================================================== */

.projects {
    background: var(--bg-dark);
}

.projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
}

.project-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: var(--transition-normal);
}

.project-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent-hover);
}

.project-image .image-placeholder {
    width: 100%;
    height: 250px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.15), rgba(16, 185, 129, 0.15));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 5rem;
    color: var(--primary-color);
    position: relative;
    overflow: hidden;
}

.project-image .image-placeholder::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(37, 99, 235, 0.1) 50%, transparent 70%);
    animation: shimmer 3s infinite;
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.project-content {
    padding: 2rem;
}

.project-content h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-weight: 600;
}

.project-content p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

.project-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
}

.tag {
    background: rgba(37, 99, 235, 0.1);
    border: 1px solid var(--border-color);
    color: var(--primary-color);
    padding: 4px 12px;
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
    font-weight: 500;
}

.project-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
}

.project-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: var(--transition-normal);
}

.project-link:hover,
.project-link:focus {
    color: var(--accent-color);
}

.project-link:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
    border-radius: var(--radius-xs);
}

/* ==========================================================================
   RESEARCH SECTION
   ========================================================================== */

.research {
    background: rgba(0, 0, 0, 0.3);
}

.research-content {
    max-width: 1000px;
    margin: 0 auto;
}

.research-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
}

.research-header {
    display: flex;
    gap: 2rem;
    padding: 2rem;
    background: rgba(37, 99, 235, 0.05);
    border-bottom: 1px solid var(--border-color);
}

.research-icon {
    font-size: 3.5rem;
    color: var(--primary-color);
    flex-shrink: 0;
}

.research-info h3 {
    font-size: 1.8rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.4;
}

.research-conference {
    color: var(--primary-color);
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.research-body {
    padding: 2rem;
}

.research-body h4 {
    font-size: 1.3rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
    margin-top: 1.5rem;
}

.research-body h4:first-child {
    margin-top: 0;
}

.research-body p,
.research-body li {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1rem;
}

.research-body ul {
    list-style: none;
    padding-left: 0;
}

.research-body ul li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 0.8rem;
}

.research-body ul li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
}

.research-team {
    background: rgba(0, 0, 0, 0.3);
    padding: 1.5rem;
    border-radius: var(--radius-md);
    margin-top: 1.5rem;
}

.research-team p {
    margin-bottom: 0.5rem;
}

.team-list {
    margin-top: 0.5rem;
}

.team-list li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding-left: 0;
}

.team-list li::before {
    content: '';
}

.team-list i {
    color: var(--primary-color);
}

.research-tags {
    margin-top: 2rem;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

/* ==========================================================================
   EXPERIENCE SECTION
   ========================================================================== */

.experience {
    background: var(--bg-dark);
}

.experience-timeline {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
}

.experience-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
    display: flex;
    gap: 2rem;
    box-shadow: var(--shadow-md);
    transition: var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.experience-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--primary-color), var(--accent-color));
}

.experience-card:hover {
    transform: translateX(5px);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
}

.experience-icon {
    font-size: 3rem;
    color: var(--primary-color);
    flex-shrink: 0;
}

.experience-content h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.experience-content h4 {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-weight: 500;
}

.experience-date {
    color: var(--primary-color);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.experience-details {
    list-style: none;
    padding-left: 0;
}

.experience-details li {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
}

.experience-details li::before {
    content: '▹';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
}


/* ==========================================================================
   PROJECT MODALS
   ========================================================================== */

.project-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    transition: opacity var(--transition-normal);
}

.project-modal.active {
    display: flex;
    opacity: 1;
}

.modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(5px);
    cursor: pointer;
}

.modal-content {
    position: relative;
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    max-width: 900px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: var(--shadow-accent-hover);
    z-index: 10001;
    animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-30px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.modal-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-full);
    color: var(--text-primary);
    font-size: 1.2rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-normal);
    z-index: 10002;
}

.modal-close:hover,
.modal-close:focus {
    background: var(--primary-color);
    color: var(--bg-dark);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
    transform: rotate(90deg);
}

.modal-close:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
}

.modal-header {
    padding: 2.5rem 2.5rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
}

.modal-title {
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    padding-right: 3rem;
    line-height: 1.3;
}

.modal-subtitle {
    color: var(--primary-color);
    font-size: 1.1rem;
    font-weight: 500;
}

.modal-body {
    padding: 2rem 2.5rem 2.5rem;
}

.modal-image-placeholder {
    width: 100%;
    height: 300px;
    background: linear-gradient(135deg, rgba(0, 240, 255, 0.15), rgba(0, 255, 136, 0.15));
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
}

.modal-image-placeholder::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(0, 240, 255, 0.1) 50%, transparent 70%);
    animation: shimmer 3s infinite;
}

.modal-image-placeholder i {
    font-size: 5rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
    
}

.modal-image-placeholder p {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

.modal-description h3 {
    font-size: 1.4rem;
    color: var(--primary-color);
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.modal-description h3:first-child {
    margin-top: 0;
}

.modal-description p {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
}

.modal-description ul {
    list-style: none;
    padding-left: 0;
    margin-bottom: 1.5rem;
}

.modal-description ul li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 1rem;
    color: var(--text-secondary);
    line-height: 1.7;
}

.modal-description ul li::before {
    content: '▹';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-size: 1.5rem;
    font-weight: bold;
}

.modal-description ul li strong {
    color: var(--text-primary);
}

.modal-tech-stack {
    background: rgba(0, 0, 0, 0.3);
    padding: 1.5rem;
    border-radius: var(--radius-md);
    margin-top: 2rem;
    margin-bottom: 2rem;
}

.modal-tech-stack h3 {
    font-size: 1.3rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.tech-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.tech-tag {
    background: linear-gradient(135deg, rgba(0, 240, 255, 0.2), rgba(0, 255, 136, 0.2));
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    padding: 8px 16px;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    font-weight: 600;
    box-shadow: 0 0 10px rgba(0, 240, 255, 0.2);
    transition: var(--transition-normal);
}

.tech-tag:hover {
    background: var(--primary-color);
    color: var(--bg-dark);
    box-shadow: var(--shadow-accent);
    transform: translateY(-2px);
}

.modal-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 2rem;
}

.modal-btn {
    flex: 1;
    min-width: 200px;
    padding: 14px 24px;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: var(--transition-normal);
    border: 2px solid transparent;
    cursor: pointer;
}

.modal-btn-primary {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-secondary));
    color: var(--bg-dark);
    box-shadow: var(--shadow-accent);
}

.modal-btn-primary:hover,
.modal-btn-primary:focus {
    transform: translateY(-3px);
    box-shadow: var(--shadow-accent-hover);
}

.modal-btn-primary:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
}

.modal-btn-secondary {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
}

.modal-btn-secondary:hover,
.modal-btn-secondary:focus {
    background: var(--primary-color);
    color: var(--bg-dark);
    box-shadow: var(--shadow-accent);
    transform: translateY(-3px);
}

.modal-btn-secondary:focus-visible {
    outline: 3px solid var(--accent-color);
    outline-offset: 4px;
}

.project-details-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    font-family: inherit;
}

/* Custom scrollbar for modal */
.modal-content::-webkit-scrollbar {
    width: 8px;
}

.modal-content::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
}

.modal-content::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, var(--primary-color), var(--accent-secondary));
    border-radius: 4px;
}

.modal-content::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, var(--accent-secondary), var(--accent-color));
}

/* ==========================================================================
   CONTACT SECTION
   ========================================================================== */

.contact {
    background: rgba(0, 0, 0, 0.3);
}

.contact-subtitle {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 3rem;
    font-size: 1.1rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.contact-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    padding: 1rem;
    background: var(--bg-glass);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    transition: var(--transition-normal);
}

.contact-item:hover {
    border-color: var(--primary-color);
    background: rgba(0, 240, 255, 0.05);
}

.contact-item i {
    font-size: 1.5rem;
    color: var(--primary-color);
    margin-top: 5px;
    flex-shrink: 0;
}

.contact-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    color: var(--text-primary);
}

.contact-item p {
    color: var(--text-secondary);
    line-height: 1.5;
}

.contact-item a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition-normal);
}

.contact-item a:hover,
.contact-item a:focus {
    color: var(--primary-color);
    outline: none;
}

.contact-form {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-lg);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 12px 16px;
    background: rgba(0, 0, 0, 0.3);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: var(--transition-normal);
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 10px rgba(0, 240, 255, 0.3);
}

.form-group textarea {
    resize: vertical;
    min-height: 120px;
}

.form-note {
    margin-top: 1rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    text-align: center;
    line-height: 1.6;
}

.form-note i {
    margin-right: 0.3rem;
}

.form-note a {
    color: var(--primary-color);
    text-decoration: none;
}

.form-note a:hover {
    text-decoration: underline;
}

/* ==========================================================================
   FOOTER
   ========================================================================== */

.footer {
    background: var(--bg-darker);
    border-top: 1px solid var(--border-color);
    padding: 2.5rem 0;
}

.footer .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer-content p {
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
}

.footer-tagline {
    font-size: 0.9rem;
    color: var(--text-muted);
}

.footer-links {
    display: flex;
    gap: 1rem;
}

.footer-links a {
    color: var(--text-secondary);
    font-size: 1.5rem;
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    border: 2px solid var(--border-color);
    transition: var(--transition-normal);
}

.footer-links a:hover,
.footer-links a:focus {
    color: var(--primary-color);
    border-color: var(--primary-color);
    box-shadow: var(--shadow-accent);
    transform: translateY(-3px);
    outline: none;
}

/* ==========================================================================
   SCROLL TO TOP BUTTON (added via JS)
   ========================================================================== */

.scroll-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-secondary));
    color: var(--bg-dark);
    border: none;
    border-radius: var(--radius-full);
    width: 50px;
    height: 50px;
    font-size: 20px;
    cursor: pointer;
    display: none;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-accent);
    transition: var(--transition-normal);
    z-index: 999;
}

.scroll-to-top:hover,
.scroll-to-top:focus {
    transform: translateY(-5px);
    box-shadow: var(--shadow-accent-hover);
    outline: none;
}

/* ==========================================================================
   RESPONSIVE DESIGN - TABLET
   ========================================================================== */

@media (max-width: 1024px) {
    .skills-grid {
        grid-template-columns: repeat(3, 1fr);
    }

    .projects-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    /* Navigation */
    .hamburger {
        display: flex;
    }

    .nav-menu {
        position: fixed;
        left: -100%;
        top: 70px;
        flex-direction: column;
        background: rgba(7, 7, 10, 0.98);
        backdrop-filter: blur(10px);
        width: 100%;
        text-align: center;
        transition: var(--transition-normal);
        box-shadow: var(--shadow-lg);
        padding: 2rem 0;
        border-top: 1px solid var(--border-color);
        z-index: 999;
    }

    .nav-menu.active {
        left: 0;
    }

    .nav-menu li {
        margin: 0.5rem 0;
    }

    .nav-link.resume-link {
        display: inline-flex;
    }

    /* Hero */
    .hero {
        padding: 100px 20px 60px;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .hero-subtitle {
        font-size: 1.2rem;
    }

    .hero-description {
        font-size: 1rem;
    }

    .hero-buttons {
        flex-direction: column;
        align-items: center;
    }

    .btn {
        width: 100%;
        max-width: 300px;
        justify-content: center;
    }

    /* Skills */
    .skills-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    /* Projects */
    .projects-grid {
        grid-template-columns: 1fr;
    }

    /* Education & Experience */
    .education-card,
    .experience-card {
        flex-direction: column;
        text-align: center;
    }

    .education-icon,
    .experience-icon {
        font-size: 2.5rem;
    }

    /* Research */
    .research-header {
        flex-direction: column;
        text-align: center;
    }

    .research-info h3 {
        font-size: 1.5rem;
    }

    /* Contact */
    .contact-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    /* Footer */
    .footer .container {
        flex-direction: column;
        gap: 1.5rem;
        text-align: center;
    }

    /* Section Title */
    .section-title {
        font-size: 2rem;
    }

    /* Modal */
    .project-modal {
        padding: 1rem;
    }

    .modal-content {
        max-height: 95vh;
    }

    .modal-header {
        padding: 2rem 1.5rem 1rem;
    }

    .modal-title {
        font-size: 1.5rem;
    }

    .modal-body {
        padding: 1.5rem;
    }

    .modal-image-placeholder {
        height: 200px;
    }

    .modal-image-placeholder i {
        font-size: 3rem;
    }

    .modal-description h3 {
        font-size: 1.2rem;
    }

    .modal-links {
        flex-direction: column;
    }

    .modal-btn {
        width: 100%;
        min-width: auto;
    }
}

@media (max-width: 480px) {
    /* Hero */
    .hero-title {
        font-size: 2rem;
    }

    .hero-subtitle {
        font-size: 1rem;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        font-size: 3rem;
    }

    /* Skills */
    .skills-grid {
        grid-template-columns: 1fr;
    }

    .skill-icon {
        font-size: 3rem;
    }

    /* Section Title */
    .section-title {
        font-size: 1.8rem;
    }

    /* Cards */
    .education-card,
    .experience-card,
    .project-card,
    .research-card {
        padding: 1.5rem;
    }

    /* Contact Form */
    .contact-form {
        padding: 1.5rem;
    }
}

/* ==========================================================================
   PRINT STYLES - FOR RESUME PAGE
   ========================================================================== */

@media print {
    /* Hide unnecessary elements */
    .navbar,
    .hamburger,
    .hero-buttons,
    .social-links,
    .footer,
    .scroll-to-top,
    .btn,
    .project-modal {
        display: none !important;
    }

    /* Reset colors for print */
    body {
        background: white;
        color: black;
    }

    section {
        page-break-inside: avoid;
        padding: 20px 0;
    }

    .section-title {
        color: black;
        font-size: 1.5rem;
        page-break-after: avoid;
    }

    .section-title::after {
        background: black;
    }

    /* Cards */
    .skill-card,
    .project-card,
    .education-card,
    .experience-card,
    .research-card {
        background: white;
        border: 1px solid #ddd;
        box-shadow: none;
        page-break-inside: avoid;
    }

    /* Text colors */
    h1, h2, h3, h4, h5, h6,
    p, li, a {
        color: black !important;
        text-shadow: none !important;
    }

    /* Links */
    a {
        text-decoration: underline;
    }

    a[href^="http"]:after {
        content: " (" attr(href) ")";
        font-size: 0.8em;
    }

    /* Remove shadows and effects */
    * {
        box-shadow: none !important;
        text-shadow: none !important;
    }
}

/* ==========================================================================
   ANIMATIONS & KEYFRAMES
   ========================================================================== */

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes slideInLeft {
    from {
        opacity: 0;
        transform: translateX(-50px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* ==========================================================================
   ACCESSIBILITY - FOCUS STATES
   ========================================================================== */

/* Custom focus outline for keyboard navigation */
*:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 3px;
}

/* Ensure sufficient color contrast */
::selection {
    background: var(--primary-color);
    color: var(--bg-dark);
}

::-moz-selection {
    background: var(--primary-color);
    color: var(--bg-dark);
}

/* ==========================================================================
   CUSTOM SCROLLBAR
   ========================================================================== */

::-webkit-scrollbar {
    width: 12px;
}

::-webkit-scrollbar-track {
    background: var(--bg-dark);
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, var(--primary-color), var(--accent-secondary));
    border-radius: 6px;
    box-shadow: var(--shadow-accent);
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, var(--accent-secondary), var(--accent-color));
}

/* ==========================================================================
   END OF STYLESHEET
   ========================================================================== */
